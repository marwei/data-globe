<div id="point-form">
  <%= form_for [@globe, Point.new], remote: true do |f| %>
    <div class="form-component">
      <%= f.label :city %>
      <%= f.text_field :city %>
    </div>
    <div class="form-component">
      <%= f.label :state %>
      <%= f.text_field :state %>
    </div>
    <div class="form-component">
      <%= f.label :country %>
      <%= f.text_field :country %>
    </div>
    <div class="form-component">
      <%= f.label :magnitude, "Value" %>
      <%= f.text_field :magnitude %>
    </div>
    <div class="form-component">
      <%= f.submit "Add New" %>
    </div>
  <% end %>
</div>